@{
    var entityName = "Payment";
    var entity = Framework.Common.EntityFactory.GetEntityInfoByName(entityName, "");
}

@{ ViewBag.ViewTitle = "Insert new payment"; }
@Html.Partial("~/Views/Dashboard/_Layout/_SmallFormHeader.cshtml")

    <form role="form"
          ng-controller="@(entityName)InsertFormController"
          id="@(entityName)InsertFormFrm"
          onsubmit="return false;">

        <h3>Enter the amount that patient should pay</h3>

        <div class="form-group">
            <label class="control-label">Amount</label>
            <div class="input-group">
                <span class="input-group-addon">$</span>
                <input type="text"
                       name="Amount"
                       class="form-control"
                       data-ng-model="model.@(vPayment.ColumnNames.Amount)"
                       data-bv-notempty="true"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">Service Charge Amount</label>
            <div class="input-group">
                <span class="input-group-addon">$</span>
                <input type="text"
                       name="ServiceChargeAmount"
                       class="form-control"
                       data-ng-model="model.@(vPayment.ColumnNames.ServiceChargeAmount)"
                       readonly="readonly"
                       data-bv-notempty="true"/>
            </div>
            <span class="help-block">
                This is an extra money that we charge for processing the online payments
            </span>
        </div>


        @*@FWHtml.Editor(entity.EntityColumns[vPayment.ColumnNames.Amount])
        @FWHtml.Editor(entity.EntityColumns[vPayment.ColumnNames.ServiceChargeAmount], "readonly='readonly'")*@

        <div class="form-group">
            <button class="btn btn-lg btn-success btn-block"
                    ng-click="CreatePaymentForVisit($event)">
                Save
            </button>
        </div>

    </form>


@Html.Partial("~/Views/Dashboard/_Layout/_SmallFormFooter.cshtml")