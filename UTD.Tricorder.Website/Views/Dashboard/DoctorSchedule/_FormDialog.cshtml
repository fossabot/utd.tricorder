@{
    var service = DoctorScheduleEN.GetService();
    string entityName = service.EntityName;
    var entity = service.Entity;
}

@* --------------------------------- Change Info Dialog -------------------------------- *@



    <div id="DoctorScheduleFormDialogDlg"
     class="modal fade bs-changeinfo-modal-lg"
     tabindex="-1"
     role="dialog"
     aria-labelledby="changeinfoDialog"
     aria-hidden="true"
     ng-controller="DoctorScheduleFormDialogController">

    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Schedule Slot</h4>
            </div>
            <div class="modal-body">
                <form id="DoctorScheduleFormDialogFrm" role="form" onsubmit="return false;">
                    <div class="form-group">
                        <div class="form-control">
                            <span ng-bind="FormatDateTimeUnix(model.SlotUnixEpoch)"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        @FWHtml.Editor(entity.EntityColumns[vDoctorSchedule.ColumnNames.NumberOfAllowedPatients])
                    </div>

                    <div class="form-group">
                        @FWHtml.Editor(entity.EntityColumns[vDoctorSchedule.ColumnNames.DoctorScheduleVisitPlaceID])
                    </div>
                </form>


                @*<div ng-hide="model.NumberOfRegisteredPatients == 0">
                        @Html.Partial("~/Views/Dashboard/Visit/MyVisitsDoctor.cshtml")
                    </div>*@


                <div class="modal-footer">
                    <button class="btn btn-success"
                            ng-click="Save()">
                        Save
                    </button>
                    <button class="btn btn-danger"
                            ng-click="DeleteItem(EntityIDValue)"
                            ng-hide="IsInsertForm === true">
                        Delete
                    </button>
                    <button class="btn btn-link"
                            ng-click="CloseDialog()">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
