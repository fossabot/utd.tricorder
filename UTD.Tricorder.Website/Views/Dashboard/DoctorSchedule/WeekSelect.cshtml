@using UTD.Tricorder.Common.EntityInfos;
@using UTD.Tricorder.Common.EntityObjects;


<div id="DoctorScheduleWeekSelectControllerDiv"
     ng-controller="DoctorScheduleWeekSelectController">

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @*<label>Selected date</label>*@
                @*<div class="input-group">*@
                <div datetimepicker="{pickTime: false}"
                     data-ng-model="SelectedDateString">
                    <input id="SelectedDateInput"
                           name="SelectedDate"
                           placeholder="YYYY/MM/DD"
                           class="form-control"
                           data-date-format="YYYY/MM/DD"
                           data-mask="0000/00/00"
                           data-bv-date="true"
                           data-bv-date-format="YYYY/MM/DD"
                           data-bv-notempty="true"
                           data-bv-notempty-message="Please select a time from the date picker"
                           data-datevalue=""
                           readonly="readonly" />
                </div>

            </div>
        </div>
        <div class="col-md-8">

            <button class="btn btn-info" type="button"
                    ng-click="GotoOffset(-30)">
                Prev Month
            </button>

            <button class="btn btn-info" type="button"
                    ng-click="GotoOffset(-7)">
                Prev Week
            </button>

            <button class="btn btn-primary" type="button"
                    ng-click="GotoToday()">
                Today
            </button>

            <button class="btn btn-info" type="button"
                    ng-click="GotoOffset(+7)">
                Next Week
            </button>

            <button class="btn btn-info" type="button"
                    ng-click="GotoOffset(+30)">
                Next Month
            </button>

        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Available times</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="list in itemsListS">
                <td id="labelTD{{$index}}">
                    {{list.dayLabel}}
                </td>

                <td id="buttonsTD{{$index}}">
                    <span ng-repeat="item in list.items" style="padding:1px">
                        <a class="btn btn-default "
                           ng-click="$parent.DoctorScheduleSelected(item, $event)"
                           style="width:90px">
                            {{item.AvailableDateTimeLocal}}
                        </a>
                    </span>
                    <span ng-hide="list.items.length > 0">No time is available</span>
                </td>
            </tr>

        </tbody>
    </table>

</div>

