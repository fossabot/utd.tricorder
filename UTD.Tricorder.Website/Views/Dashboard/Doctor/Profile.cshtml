@{ ViewBag.ViewTitle = "Doctor's profile"; }
@Html.Partial("~/Views/Dashboard/_Layout/_MasterViewHeader.cshtml")

<div id="DoctorProfileControllerDiv" 
     ng-controller="DoctorProfileController">

    <div class="row">
        <div class="col-md-3 col-lg-3 " align="center">
            @UI.DoctorProfileImage("{{model.DoctorProfilePicUrl}}")
        </div>

        <div class=" col-md-9 col-lg-9 ">
            <table class="table table-info">
                <tbody>
                    <tr>
                        <td class="table-info-title">Name</td>
                        <td><span ng-bind="model.DoctorFullName"></span></td>
                    </tr>
                    <tr>
                        <td class="table-info-title">Tel</td>
                        <td><a href="tel:{{model.ClinicPhoneNumber}}"><span ng-bind="model.ClinicPhoneNumber"></span></a></td>
                    </tr>
                    <tr>
                        <td class="table-info-title">Address</td>
                        <td><div ng-bind-html="TextToHtml(model.ClinicAddress) | unsafe"></div></td>
                    </tr>

                    <tr>
                        <td class="table-info-title">Degrees</td>
                        <td><span ng-bind="model.Degrees"></span></td>
                    </tr>
                    <tr>
                        <td class="table-info-title">Medical School</td>
                        <td><span ng-bind="model.MedicalSchool"></span></td>
                    </tr>
                    <tr>
                        <td class="table-info-title">Languages</td>
                        <td><span ng-bind-html="FormatCommaList(model.LanguagesList) | unsafe"></span></td>
                    </tr>
                    <tr>
                        <td class="table-info-title">Licensed States</td>
                        <td><span ng-bind-html="FormatCommaList(model.USStatesList) | unsafe"></span></td>
                    </tr>
                    <tr>
                        <td class="table-info-title">Specialites</td>
                        <td><span ng-bind-html="FormatCommaList(model.SpecialtiesList) | unsafe"></span></td>
                    </tr>
                    <tr>
                        <td class="table-info-title">Insurances</td>
                        <td><span ng-bind-html="FormatCommaList(model.InsuranceFullNamesList) | unsafe"></span></td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <span class="table-info-title">Professional Statement</span>
                            <div>
                                <span ng-bind-html="TextToHtml(model.ProfessionalStatement) | unsafe"></span>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>

        </div>
    </div>
</div>

@Html.Partial("~/Views/Dashboard/_Layout/_MasterViewFooter.cshtml")
